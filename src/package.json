{
  "name": "LiveMeTools",
  "title": "LiveMe Tools",
  "version": "6.3.1",
  "minversion": "6.2.1",
  "description": "A tool designed to help in searching and viewing of LiveMe broadcasts.",
  "main": "index.js",
  "author": {
    "name": "The Coder",
    "email": "thecoder1975@gmail.com"
  },
  "homepage": "https://github.com/thecoder75/liveme-tools/",
  "dependencies": {
    "async": "^2.5.0",
    "axios": "^0.16.2",
    "electron-is-dev": "^0.3.0",
    "electron-settings": "^3.1.2",
    "fluent-ffmpeg": "^2.1.2",
    "format-duration": "^1.0.0",
    "fs-extra": "^4.0.2",
    "init": "^0.1.2",
    "liveme-api": "^1.2.4",
    "nedb": "^1.8.0",
    "p-map": "^1.2.0",
    "p-progress": "^0.1.1",
    "request": "^2.83.0",
    "shelljs": "^0.7.8",
    "wget-improved": "^1.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thecoder75/liveme-tools"
  },
  "contributors": [
    "thecoder75",
    "polydragon",
    "zp"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^1.8.1",
    "electron-builder": "^19.36.0"
  },
  "keywords": [
    "node",
    "electron",
    "video",
    "tools",
    "liveme"
  ],
  "build": {
    "appId": "com.thecoderstoolbox.livemetools",
    "productName": "LiveMeTools",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.video",
      "target": [
        "dmg"
      ],
      "identity": null,
      "icon": "build/appicon.icns"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/appicon.ico"
    },
    "linux": {
      "target": [
        "tar.bz2"
      ],
      "maintainer": "thecoder1975@gmail.com"
    },
    "publish": [
      {
        "provider":"github",
        "vPrefixedTagName" : false,
        "releaseType": "release"
      }
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "./node_modules/.bin/electron . --enable-logging",
    "dev": "NODE_ENV='development' npm run start",
    "dist-win": "build --publish publish -w --ia32 --x64",
    "dist": "build --publish always",
    "release": "build --publish always"
  }
}
